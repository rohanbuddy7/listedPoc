<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ListedPoc" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="BottomNav.ActiveItemTexts" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/figtree_medium</item>
    </style>

    <style name="BottomNav.InactiveItemTexts" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/small</item>
        <item name="android:fontFamily">@font/figtree_regular</item>
    </style>

    <style name="tv_regular_black">
        <item name="android:fontFamily">@font/figtree_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/regular</item>
    </style>

    <style name="tv_small_black">
        <item name="android:fontFamily">@font/figtree_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="tv_medium_black">
        <item name="android:fontFamily">@font/figtree_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/regular</item>
    </style>

    <style name="tv_semibold_black">
        <item name="android:fontFamily">@font/figtree_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/regular</item>
    </style>



</resources>